{
    "compilerOptions": {
        "target": "ES2021",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "lib": ["ES2021", "DOM"],
        "strict": true,
        "declaration": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "types": ["node"], // ‚Üê wichtig
        "verbatimModuleSyntax": true // erlaubt .js-Exporte in TS-Imports
    },
    "include": ["src"]
}
